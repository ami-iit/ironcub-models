<?xml version="1.0" encoding="UTF-8" ?>
<device  xmlns:xi="http://www.w3.org/2001/XInclude" name="ft-imu-mas-remapper" type="multipleanalogsensorsremapper">
        <param name="period">10</param>
    <param name="ThreeAxisGyroscopesNames">
      (head_imu, chest_imu)
    </param>
    <param name="ThreeAxisLinearAccelerometersNames">
      (head_imu, chest_imu)
    </param>
    <param name="OrientationSensorsNames">
      (head_imu, chest_imu)
    </param>
    <param name="SixAxisForceTorqueSensorsNames">
          (l_arm_ft
           l_jet_ft
           l_foot_front_ft
           l_foot_rear_ft
           r_arm_ft
           r_jet_ft
           r_foot_front_ft
           r_foot_rear_ft)
    </param>
    <param name="TemperatureSensorsNames">
          (l_arm_ft
           l_jet_ft
           l_foot_front_ft
           l_foot_rear_ft
           r_arm_ft
           r_jet_ft
           r_foot_front_ft
           r_foot_rear_ft)
    </param>
    <action phase="startup" level="5" type="attach">
        <paramlist name="networks">
        <elem name="head_imu_acc">head_imu_acc</elem>
        <elem name="chest_imu_acc">chest_imu_acc</elem>
        <elem name="left_arm_jetpack_fts_client">left_arm_jetpack_fts_client</elem>
        <elem name="right_arm_jetpack_fts_client">right_arm_jetpack_fts_client</elem>
        <elem name="left_leg_ft_client">left_leg_ft_client</elem>
        <elem name="right_leg_ft_client">right_leg_ft_client</elem>
        </paramlist>
    </action>

    <action phase="shutdown" level="5" type="detach" />
</device>
